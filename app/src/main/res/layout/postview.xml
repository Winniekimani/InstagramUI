<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:src="@drawable/test" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/user_profile"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:id="@+id/user_name"
                android:text="@string/jumiakenya"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/user_topic"
                android:text="@string/sponsored"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/dots_icon" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/image_posted_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_profile"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:maxHeight="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/like_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:src="@drawable/heart_customized_icon" />

            <ImageView
                android:id="@+id/message_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/like_icon"
                android:padding="5dp"
                android:src="@drawable/message_topic" />

            <ImageView
                android:id="@+id/share_post"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/message_icon"
                android:padding="5dp"
                android:src="@drawable/send_icon_customized" />

            <ImageView
                android:id="@+id/save_post"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:src="@drawable/save_icon" />

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/poster_name_appearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Millywajesus"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/content_posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/poster_name_appearance"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="just joined instagram guys!welcome me.i am glasd to be hrrer with you guyd todya welcome to mu "
                android:textColor="@color/black" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_comments"
        android:text="view all 86 comments"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_posted"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        android:text="3 days ago"/>


</LinearLayout>